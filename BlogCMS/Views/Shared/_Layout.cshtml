        type: "Get",
        url: URL,
        dataType: "json",
        success: function (categories) {

            BuildCategoriesLinks(categories);

            //$('#modelbox').val("");
            //$('#addmodelbox').addClass("hidden");
            //$('#modellist select').append($("<option></option>").val(model.ModelID).html(model.Model1));
            //$('#addmodelbox').addClass("hidden");
        },
        fail: function() {
            $('#category2').html("Load fail!");
        },
        data: { },
        async: false
    });

}

function BuildCategoriesLinks(categories) {

    var category1 = $('#category1');
    category1.append($("<ul id=\"list1\"></ul>"));
    $('#list1').addClass("list-unstyled");
    //category1.append($("<ul></ul>").addClass("list-unstyled"));
    

    $.each(categories, function(index, category) {
        //category1.append($("<li></li>").html($("<a></a>").attr("html", "#").text(category.CategoryName)));
        category1.append($("<li>").html($("<a></a>").attr("html", "#").text(category.CategoryName)));
    });
}


</script>

